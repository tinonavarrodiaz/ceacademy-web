---
import '../scss/styles.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  page: string;
}

const { title, page } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href={`/icons.css`} />

    <title>{title}</title>
    <meta name="referrer" content="origin">
    <meta name="description"
      content="La salud financiera no se trata de un destino, sino de un camino lleno de toma de decisiones favorables para tus finanzas, felicidad y éxito.">
    <meta property="og:title" content="CEACADEMY" />
    <meta property="og:description"
      content="La salud financiera no se trata de un destino, sino de un camino lleno de toma de decisiones favorables para tus finanzas, felicidad y éxito." />
    <meta property="og:url" content="https://ceacademy.com.mx/" />
    <meta property="og:site_name" content="CEACADEMY" />
    <meta property="og:image" content="https://i.ibb.co/R0sKNgB/banner.jpg" />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="1280" />
    <meta property="og:image:height" content="843" />
    <meta property="og:type" content="website" />
    <script
      src="https://kit.fontawesome.com/0372b18be3.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <Header page={page} />
    <main>
      <slot />
    </main>
    <Footer />
    <a href="#inicio" class="totop" id="totop">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 13.01 4"
        ><path
          class="cls-1"
          d="M6.28.05a.51.51,0,0,1,.45,0l6,3a.5.5,0,0,1,.23.67.51.51,0,0,1-.67.23h0L6.5,1.06.73,4a.51.51,0,0,1-.68-.22.5.5,0,0,1,.22-.67h0Z"
        ></path>
      </svg>
    </a>
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
