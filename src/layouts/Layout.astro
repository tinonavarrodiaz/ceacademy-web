---
import '../scss/styles.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  page: string;
}

const { title, page } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href={`/favicon.jpg`} />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href={`/icons.css`} />

    <title>{title}</title>
    <script
      src="https://kit.fontawesome.com/0372b18be3.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <Header page={page} />
    <main>
      <slot />
    </main>
    <Footer />
    <a href="#inicio" class="totop" id="totop">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 13.01 4"
        ><path
          class="cls-1"
          d="M6.28.05a.51.51,0,0,1,.45,0l6,3a.5.5,0,0,1,.23.67.51.51,0,0,1-.67.23h0L6.5,1.06.73,4a.51.51,0,0,1-.68-.22.5.5,0,0,1,.22-.67h0Z"
        ></path>
      </svg>
    </a>
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
