---
import Social from './Social.astro';
import sponsors from '../Helpers/sponsors'
const path = '/';
---

<footer class="main-footer">
  <div class="main-footer__container">
    <div class="main-footer__data">
      <img src={`/img/logo.svg`} alt="Logo" class="main-footer__logo" />
      <Social />
    </div>
    <div class="sponsors">
      <h3>Patrocinios</h3>
      <ul class="sponsors_container">
      {
        sponsors.map(el=>(
          <li>
            <a href={el.url} target="_blank">{el.url}</a>
          </li>
        ))
      }
      </ul>
    </div>
    <div class="newsletter">
      <div class="newsletter__header">
        <h3>Suscr√≠bete a nuestro newsletter</h3>
      </div>
      <form action="#" class="newsletter__form">
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Escribe tu email"
        />
        <button type="submit" class="btn btn-dark btn-small">Suscribirme</button>
      </form>
    </div>
  </div>
  <div class="bottom-bar">
      <a href="/privacidad">Aviso de Privacidad</a>
  </div>
</footer>
